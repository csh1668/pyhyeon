# String advanced operations test

# str() builtin
x = 42
s = str(x)
print(s)
assert(s == "42")

# len() builtin
text = "hello"
length = len(text)
print(length)
assert(length == 5)

# len() with empty string
empty = ""
assert(len(empty) == 0)

# String concatenation and length
s1 = "hello"
s2 = " world"
combined = s1 + s2
print(combined)
assert(combined == "hello world")
assert(len(combined) == 11)

# String repetition
repeated = "abc" * 2
assert(repeated == "abcabc")
assert(len(repeated) == 6)

# Convert bool to string
b = True
bs = str(b)
assert(bs == "True")

# String comparison
assert(("abc" < "def") == True)
assert(("hello" == "hello") == True)
